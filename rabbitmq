helm repo add bitnami https://charts.bitnami.com/bitnami
kubectl create namespace rmq-prod
helm upgrade --install rmq bitnami/rabbitmq   --namespace rmq-prod   --set replicaCount=1   --set auth.username=app   --set auth.password='P@ssw0rd2025DW'   --set persistence.size=2Gi   --set metrics.enabled=true   --set resources.requests.cpu=500m   --set resources.requests.memory=1Gi   --set resources.limits.cpu=1   --set resources.limits.memory=2Gi
helm upgrade rmq bitnami/rabbitmq -n rmq-prod \
  --set image.registry=docker.io \
  --set image.repository=bitnamilegacy/rabbitmq \
  --set image.tag=4.1.3-debian-12-r1 \
  --set global.security.allowInsecureImages=true \
  --reuse-values
